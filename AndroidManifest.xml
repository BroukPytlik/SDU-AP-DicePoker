<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tulakj.dicepoker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tulakj.dicepoker.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tulakj.dicepoker.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.tulakj.dicepoker.RulesActivity"
            android:label="@string/title_activity_rules" >
        </activity>
        <activity
            android:name="com.tulakj.dicepoker.GameActivity"
            android:label="@string/title_activity_game" >
        </activity>
        <activity
            android:name="com.tulakj.dicepoker.HistoryActivity"
            android:label="@string/title_activity_history" >
        </activity>
    </application>

</manifest>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:configChanges="orientation"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:screenOrientation="landscape"
    tools:context=".GameActivity" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"  >
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="384dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="399dp"
            android:layout_height="wrap_content"
            android:showDividers="middle" >

            <ImageView
                android:id="@+id/player_A_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/player_inactive" />

            <TextView
                android:id="@+id/player_A_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:id="@+id/dice_A_1"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/terning6" />

            <ImageView
                android:id="@+id/dice_A_2"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/terning6" />

            <ImageView
                android:id="@+id/dice_A_3"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/terning6" />

            <ImageView
                android:id="@+id/dice_A_4"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/terning6" />

            <ImageView
                android:id="@+id/dice_A_5"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/terning6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="413dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" >

            <ImageView
                android:id="@+id/player_B_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/player_inactive" />

            <TextView
                android:id="@+id/player_B_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:id="@+id/dice_B_1"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/terning6" />

            <ImageView
                android:id="@+id/dice_B_2"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/terning6" />

            <ImageView
                android:id="@+id/dice_B_3"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/terning6" />

            <ImageView
                android:id="@+id/dice_B_4"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/terning6" />

            <ImageView
                android:id="@+id/dice_B_5"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/terning6" />
        </LinearLayout>

        <TextView
            android:id="@+id/game_tooltip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/game_do_shake_for_start" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/button_throw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/throw_dices" />

    </RelativeLayout>

</LinearLayout>